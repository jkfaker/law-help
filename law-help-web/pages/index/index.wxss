/**index.wxss**/

.swiper1 {
  align-items: center;
  margin: 0 5%;
}

.swiper1 swiper-item {
  border-radius: 20rpx;
}

.swiper1 image {
  width: 100%;
  height: 100%;
  /* 圆角化 */
}

/* 左上角搜索图标 */
.search-img {
  float: left;
  height: 90%;
  margin-left: 3%;
}

/* 上方搜索栏 */
.search-view {
  float: left;
  font-size: small;
  color: gray;
  margin: 5rpx 20rpx;
  /* display: block; */

}

/* search外面的边框 */
.search-border {
  height: 45rpx;
  margin: 0 5%;
  border-radius: 50rpx;
  border: 2px solid rgba(255, 123, 0, 1);
  margin-bottom: 30rpx;
}

/* 团队view */
.teams {
  background-color: white;
  width: 90%;
  height: 80rpx;
  margin: 30rpx 5% 0rpx 5%;
  border-radius: 10rpx;
}


.teams image {
  height: 50%;
  float: left;
  margin: 20rpx 0rpx 0rpx 25rpx;
}

.teams view {
  float: left;
  font-family: "Microsoft YaHei";
  font-weight: bold;
  font-size: 30rpx;
  margin: 20rpx 25rpx 0rpx 20rpx;
}

/* teams的右箭头 */
#teams-view {
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  margin-top: 10rpx;
  float: right;
  color: grey;
  font-size: 50rpx;
  font-weight: lighter;
}


/* 下面的块状栏 */
.grid-list {
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx 0rpx 0rpx 5%;
}

.grid-item {
  width: 45%;
  height: 560rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  margin-right: 5%;
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.grid-item image {
  height: 280rpx;
  width: 100%;
}

.grid-text {
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  font-family: "Microsoft YaHei";
  height: 65rpx;
}

#grid-price {
  height: 70rpx;
  font-size: 35rpx;
  font-weight: 500;
  margin-top: 30rpx;
  color: #fd9d19;
}

.grid-item button {
  background-color: #fd6d19;
  width: 100%;
  color: white;
  font-size: 25rpx;
  font-weight: normal;
}