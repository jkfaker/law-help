/* pages/community/community.wxss */

/* 下面的块状栏 */
.grid-list {
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx 0rpx 0rpx 5%;
}

.grid-item {
  width: 45%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  margin-right: 5%;
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.picture {
  width: 100%;
}

.title {
  margin-left: 25rpx;
  margin-top: 20rpx;
  font-size: 25rpx;
  font-weight: 500;
  font-family: "圆体";
  width: 85%;
  height: 80rpx;
}

.author {
  display: flex;
  flex-direction: row;
  margin-left: 25rpx;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-head {
  width: 45rpx;
  height: 45rpx;
}

.author-name {
  font-size: 20rpx;
  margin-left: 10rpx;
}